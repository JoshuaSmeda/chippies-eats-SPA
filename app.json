{
  "name": "ChippiesEats",
  "description": "Take the hard work out of food ordering. Use ChippiesEats today!",
  "keywords": [
    "python",
    "flask",
    "food-ordering"
  ],
  "website": "https://github.com/JoshuaSmeda/chippies-eats-SPA",
  "repository": "https://github.com/JoshuaSmeda/chippies-eats-SPA",
  "logo": "https://github.com/JoshuaSmeda/chippies-eats-SPA",
  "success_url": "/",
  "env": {
    "SECRET_TOKEN": {
      "description": "A secret key for verifying the integrity of signed cookies.",
      "generator": "secret"
    },
    "WEB_CONCURRENCY": {
      "description": "The number of processes to run.",
      "value": "3"
    }
  },
  "formation": {
    "web": {
      "quantity": 1,
      "size": "standard-1x"
    }
  },
  "image": "heroku/python",
  "addons": [
    "openredis",
    {
      "plan": "heroku-postgresql",
      "options": {
        "version": "9.5"
      }
    }
  ]
}
